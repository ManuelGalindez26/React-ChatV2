.labelA
  display block

.inputA
  height 35px
  font-size 16px
  border gray
  padding 0 15px
  border-radius 5px
  box-sizing border-box
  color gray
  outline 0

.btn-sub
  border 0
  color #FFF
  padding 0 .7em
  border-radius 3px
  height 56px
  font-size 23px
  background oranges
  box-shadow inset 0 -2px rgba(black,0.3)
  transition all .3s
  &:hover
    background blues

@media (min-width: 768px)
  .inputA
    height 56px

  .labelA
    font-size 21px
